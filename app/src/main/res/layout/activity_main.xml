<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/controlPanel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Overlay for drawing bounding boxes and landmarks -->
    <com.StressDetection.OverlayView
        android:id="@+id/overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/controlPanel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Control Panel -->
    <LinearLayout
        android:id="@+id/controlPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#CC000000"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Inference Time Display -->
        <TextView
            android:id="@+id/inferenceTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Initializing..."
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- Stress Level Background -->
        <LinearLayout
            android:id="@+id/stressIndicatorBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="#555555"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Main Stress Level -->
            <TextView
                android:id="@+id/stressLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Stress Level: Monitoring..."
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Stress Indicator -->
            <TextView
                android:id="@+id/stressIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="ðŸ“Š Position your face in camera"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <!-- Detailed Stress Information -->
            <TextView
                android:id="@+id/stressDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Point camera at your face to begin analysis"
                android:textAlignment="center"
                android:textColor="#CCFFFFFF"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Capture Status -->
        <TextView
            android:id="@+id/captureStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#FF4444"
            android:padding="8dp"
            android:text="Capturing... Please stay still"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <!-- Button Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- Capture Button -->
            <Button
                android:id="@+id/captureButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="#4CAF50"
                android:enabled="false"
                android:text="ðŸ“¸ Capture"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <!-- Reset Button -->
            <Button
                android:id="@+id/resetButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="#FF9800"
                android:text="ðŸ”„ Reset"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <!-- Resume Button -->
            <Button
                android:id="@+id/resumeButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:background="#2196F3"
                android:text="â–¶ï¸ Resume"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- View Results Button -->
        <Button
            android:id="@+id/viewResultsButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="#9C27B0"
            android:text="ðŸ“Š View Detailed Results"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:visibility="gone" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>